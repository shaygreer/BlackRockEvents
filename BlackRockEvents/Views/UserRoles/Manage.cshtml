@model List<BlackRockEvents.ViewModel.ManageUserRolesViewModel>
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper">
    <form method="post">
        <div>
            <div class="text-center">
                <h1>Manage User Roles</h1>
                <h3>Add/Remove Roles for User / @ViewBag.UserName</h3>
                <hr />
            </div>
            <div class="text-center">
                <div>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="form-check m-1">
                            <input type="hidden" asp-for="@Model[i].RoleId" />
                            <input type="hidden" asp-for="@Model[i].RoleName" />
                            <input asp-for="@Model[i].Selected" class="form-check-input" />
                            <label class="form-check-label" asp-for="@Model[i].Selected">
                                @Model[i].RoleName
                            </label>
                        </div>
                    }
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </div>
            <div class="text-center">
                    <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>